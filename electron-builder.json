{
    "appId": "com.repoinsight.app",
    "productName": "RepoInsight",
    "icon": "public/icon.png",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "dist-electron/**/*"
    ],
    "mac": {
        "category": "public.app-category.developer-tools",
        "target": [
            "dmg",
            "zip"
        ]
    },
    "win": {
        "target": [
            "nsis",
            "zip"
        ]
    },
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "category": "Development"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    }
}
